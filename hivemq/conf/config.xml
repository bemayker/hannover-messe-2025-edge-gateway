<?xml version="1.0"?>
<hivemq xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="hivemq-config.xsd">

    <listeners>
        <tcp-listener>
            <port>1883</port>
            <bind-address>0.0.0.0</bind-address>
        </tcp-listener>
        <tls-tcp-listener>
            <port>8883</port>
            <bind-address>0.0.0.0</bind-address>
            <tls>
                <keystore>
                    <path>/opt/hivemq/cert/hivemq.jks</path>
                    <password>Mayker123!</password>
                    <private-key-password>Mayker123!</private-key-password>
                </keystore>
            </tls>
        </tls-tcp-listener>
    </listeners>
</hivemq>
